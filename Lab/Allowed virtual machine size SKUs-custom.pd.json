{
  "policyType": "BuiltIn",
  "mode": "Indexed",
  "displayName": "Allowed virtual machine size SKUs-custom",
  "description": "This policy enables you to specify a set of virtual machine size SKUs that your organization can deploy.",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Compute/virtualMachines"
        },
        {
            "anyOf": [
                {
                "not": {
                    "field": "Microsoft.Compute/virtualMachines/sku.name",
                    "in": "[parameters('listOfAllowedSKUs')]"
                    }
                },
                {
                "not": {
                    "field": "Microsoft.Compute/virtualMachines/storageProfile.imageReference.sku",
                    "in": "[parameters('listOfAllowedOSs')]"
                }
                }
            ]
        }
      ]
    },
    "then": {
      "effect": "Deny"
    }
  },
  "metadata": {
    "version": "1.0.1",
    "category": "Compute"
  },
  "parameters": {
    "listOfAllowedSKUs": {
      "type": "Array",
      "metadata": {
        "displayName": "Allowed Size SKUs",
        "description": "The list of size SKUs that can be specified for virtual machines.",
        "strongType": "VMSKUs"
      }
    },
    "listOfAllowedOSs": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed Operating Systems",
          "description": "The list of operating systems that can be specified for virtual machines.",
          "defaultValue": "2019-Datacenter"
        }
      }
    },
  "type": "Microsoft.Authorization/policyDefinitions"
}